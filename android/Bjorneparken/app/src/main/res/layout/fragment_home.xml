<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/up_next_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/up_next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="@string/up_next"
                android:textSize="35sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/event_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:layout_gravity="end"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/event_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="65dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="@drawable/list_item">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/event_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/selector_pink_white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/selector_grey_white"/>

            <TextView
                android:id="@+id/event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/selector_black_white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_itinerary"
            android:shadowColor="@color/textTertiary"
            android:textAlignment="center"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">
    </RelativeLayout>
</LinearLayout>
