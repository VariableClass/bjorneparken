<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.callumveale.bjorneparken.fragments.SocialFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="@string/social_share"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/share_facebook"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook_icon"
                android:contentDescription="@string/share_facebook"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/share_twitter"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/twitter_icon"
                android:contentDescription="@string/share_twitter"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/share_instagram"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/instagram_icon"
                android:contentDescription="@string/share_instagram"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/share_other"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/share_icon"
                android:contentDescription="@string/share_other"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="@string/social_follow"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.facebook.share.widget.LikeView
                android:id="@+id/like_button"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="@string/social_rate"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <WebView
            android:id="@+id/trip_advisor"
            android:layout_width="255dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
